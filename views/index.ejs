<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/mainStyle.css" />
    <title>Pokedex</title>
  </head>

  <body>
    <nav>
      <ul>
        <li><img src="/img/pokebola.png" alt="Pokebola" /></li>
        <li>
          <a href="/">
            <h1>Pok√©dex</h1>
          </a>
        </li>
        <li><a href="cadastro">Cadastrar Pokemons</a></li>
      </ul>
    </nav>

    <header></header>
    
    <% if(menssagem != "") {  %>
    <section id="menssagem">
        <p><%= menssagem %></p> <span id="close">&times;</span>
    </section>
    <% }  %>

    <main>
      <section id="cards">
        <% pokedex.forEach((pokemon) => { %>

        <div class="card">
          <a href="/descricao/<%= pokemon.id %>"
            ><img src="<%= pokemon.imagem %>" alt="Imagem do pokemon"
          /></a>
          <h2><%= pokemon.nome %></h2>
          <p></p>
        </div>

        <% }) %>
      </section>
    </main>
    <footer>
      <p>Ednilson Fragoso</p>
      <p><a href="https://github.com/">GitHub</a></p>
    </footer>
    <script src="../js/script.js"></script>
  </body>
</html>
